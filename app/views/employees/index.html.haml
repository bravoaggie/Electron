%div#headerbar
  %h1 All Employees
%div.menubar
  %div
    = link_to 'Add a new employee', new_employee_path, class: "button menu"
%div.content
  %table.vblu#index
    %thead
      %tr
        %th.btopl Name
        %th.btopr Email
    %tbody
      = render :partial => 'employee' , :collection=>@employees
    %tfoot
      %tr
        %td.bbotl
        %td.bbotr
