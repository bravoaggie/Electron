-#A single day in a timesheet_table
-#If the day is empty
- if (day.in_and_outs.length == 0)
  %tr.last_row{ :class =>"Day#{day.num}"}
    %td= day.print
    %td
    %td

- else
  - count = 0
  - day.in_and_outs.order("in_time , out_time").each_with_index do |inandout , i |
    -count = count + 1
    %tr{:class => "Day#{day.num}Row#{count}" }
      %td= day.day.strftime("%a/%m/%d") if i == 0
      %td{:id => "Day#{day.num}In#{count}" }= inandout.print_in
      %td{:id => "Day#{day.num}Out#{count}"}= inandout.print_out

  %tr.last_row{ :class =>"Day#{day.num}"}
    %td
    %td
    %td