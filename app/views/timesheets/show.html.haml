%h1 #{@name}'s time sheet!
%h1 For payperiod #{@start_date} to #{@end_date}
%div#clockinquestionmark{ :style => "display :none"}= @employee.clockin?
%h1 Total: #{@total_hours}
%select{:name => 'pay_pariod', :id => "periodSelector", :onchange => "TimeSheet.changePeriod()"}
  -@payperiods.reverse_each do |p|
    -if p.start_date == @start_date
      %option{:value => p.id, :selected => "selected"} #{p.start_date}
    -else
      %option{:value => p.id} #{p.start_date}
%br
  -if @uid == session[:user_uid]
    -if @current
      %button{:id => "clockin" , :style => "display: inline" } Clock In
    %div{:style=> "display: inline; position: absolute; left: 360px"}
      = link_to 'Export Timesheet', employee_timesheet_show_path(@employee, @timesheet, format: "xls"), :id => "export"
%div#timesheet
  = render :partial => "timesheet" , :locals => { :first_week => @first_week , :second_week => @second_week , :middle => (@timesheet.days.length/2)+1 }
%button{:id => "submit", :style => "display: none"} Submit Changes
